<% restaurant ||= Restaurant.new %>
<div class="form-container">
  <%= form_with(model: restaurant, local: true, html: { class: 'restaurant-form' }) do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control p-2' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :address, class: 'form-label' %>
      <%= form.text_field :address, class: 'form-control p-2' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :category, class: 'form-label' %>
      <%= form.text_field :category, class: 'form-control p-2' %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :content, class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control p-2' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
